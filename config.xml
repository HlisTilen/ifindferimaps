<?xml version='1.0' encoding='utf-8'?>
<widget id="si.um.feri.ifindferimaps" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloWorld</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <icon src="www\img\logo.png" />

    <!-- application icons for Android -->
    <icon src="www\img\logo.png" platform="android" qualifier="ldpi" />
    <icon src="www\img\logo.png" platform="android" qualifier="mdpi" />
    <icon src="www\img\logo.png" platform="android" qualifier="hdpi" />
    <icon src="www\img\logo.png" platform="android" qualifier="xhdpi" />
    <icon src="www\img\logo.png" platform="android" qualifier="xxhdpi" />

    <preference name="prerendered-icon" value="false" />
    <access origin="*"/>

    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <allow-navigation href="data:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
